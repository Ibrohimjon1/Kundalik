<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/asosiyFon"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/layout_qarz_items"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_5"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgSavdoList"
                android:layout_width="@dimen/margin_70"
                android:layout_height="@dimen/margin_70"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/margin_5"
                android:src="@drawable/kulrang" />

            <TextView
                android:id="@+id/txtSavdo_list_bosh_harf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/text_id"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/oq"
                android:textSize="@dimen/text_size50"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtSavdoListId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_20"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txtSavdoListDokNom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Dokon "
                android:textColor="@color/oq"
                android:textSize="@dimen/text_size28" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtSavdoListSumma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:gravity="right"
                android:text="456,450 500$"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/qizil"
                android:textSize="@dimen/text_size30"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtSavdoListSana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_5"
                android:text="@string/text_05_01_2018"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/oq"
                android:textSize="@dimen/text_size17"
                android:gravity="right"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>