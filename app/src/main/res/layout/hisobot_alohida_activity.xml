<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/asosiyFon"
    android:paddingBottom="16dp"
    android:paddingLeft="@dimen/margin_5"
    android:paddingRight="@dimen/margin_5"
    android:paddingTop="16dp"
    tools:context=".Hisobot_alohida">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_60">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:text="@string/text_dokon_nomi"
                        android:textColor="@color/qizil"
                        android:textSize="@dimen/text_size17" />

                    <Spinner
                        android:id="@+id/spin_hisob_alohida"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_bosh_sana"
                        android:textColor="@color/qizil"
                        android:textSize="@dimen/text_size17" />

                    <TextView
                        android:id="@+id/txt_hisob_bosh_sana"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="@string/text_05_01_2018"
                        android:textColor="@color/oq"
                        android:textSize="@dimen/text_size20" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_tug_sana"
                        android:textColor="@color/qizil"
                        android:textSize="@dimen/text_size17" />

                    <TextView
                        android:id="@+id/txt_hisob_tug_sana"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="@string/text_10_01_2018"
                        android:textColor="@color/oq"
                        android:textSize="@dimen/text_size20" />
                </RelativeLayout>
                <ImageButton
                    android:id="@+id/btn_hisob_alohida_yigma"
                    android:layout_width="@dimen/margin_50"
                    android:layout_height="@dimen/margin_50"
                    android:layout_gravity="center"
                    android:paddingLeft="1dp"
                    android:layout_marginRight="@dimen/margin_5"
                    android:background="@drawable/rounbtnn"
                    android:src="@drawable/date_go" />
            </LinearLayout>

            <View
                android:id="@+id/immmmm"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/margin_5"
                android:background="@color/kulrang" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_hisob_malumot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/qora"
                    android:textSize="@dimen/text_size30" />

                <TableLayout
                    android:id="@+id/table_layout_hisob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/qizil"
                    android:dividerPadding="@dimen/margin_10">

                </TableLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
