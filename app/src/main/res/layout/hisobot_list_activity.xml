<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/asosiyFon"
    tools:context=".Hisobot_royh">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/image_hisob_hamma"
                android:layout_margin="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/hisobot_image"/>

            <Button
                android:id="@+id/btn_hisob_umumiy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roundbtn"
                android:text="@string/text_hamma_do_konlar"
                android:textColor="@color/oq"
                android:textSize="@dimen/text_size25" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/image_hisob_alohida"
                android:layout_margin="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/hisobot_hamma_image"/>

            <Button
                android:id="@+id/btn_hisob_alohida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roundbtn"
                android:text="@string/text_alohida_do_kon"
                android:textColor="@color/oq"
                android:textSize="@dimen/text_size25" />

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
