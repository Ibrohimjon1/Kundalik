<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/asosiyFon"
    tools:context=".Hisobot_alohida">


    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layou"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_60">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:text="@string/text_bosh_sana"
                        android:textColor="@color/qizil"
                        android:textSize="@dimen/text_size17" />

                    <TextView
                        android:id="@+id/txt_hisob_umumiy_bosh_sana"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="@string/text_05_01_2018"
                        android:textColor="@color/oq"
                        android:textSize="@dimen/text_size20" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:text="@string/text_tug_sana"
                        android:textColor="@color/qizil"
                        android:textSize="@dimen/text_size17" />

                    <TextView
                        android:id="@+id/txt_hisob_umumiy_tug_sana"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="@string/text_10_01_2018"
                        android:textColor="@color/oq"
                        android:textSize="@dimen/text_size20" />
                </RelativeLayout>

                <ImageButton
                    android:id="@+id/btn_hisob_umumiy_yigma"
                    android:layout_width="@dimen/margin_50"
                    android:layout_height="@dimen/margin_50"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/margin_5"
                    android:background="@drawable/rounbtnn"
                    android:src="@drawable/date_go" />

            </LinearLayout>

            <View
                android:id="@+id/immmm_umumiy"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/margin_5"
                android:background="@color/kulrang" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_umumiy_malumot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/qora"
                    android:textSize="@dimen/text_size30" />

                <TableLayout
                    android:id="@+id/table_layout_hisob_umumiy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/qizil"
                    android:dividerPadding="@dimen/margin_10">
                </TableLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
