<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/asosiyFon"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_10"
        android:id="@+id/liniya"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@color/kulrang" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/margin_15"
        android:layout_below="@id/liniya"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/savdo_dyn_dok_nom"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size35"
            android:textColor="@color/qizil"
            android:text="@string/text_dokon_nomi"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spin_savdo_dyn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20"/>

            <EditText
                android:id="@+id/edt_savdo_dyn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/round_layout"
                android:gravity="right"
                android:paddingRight="@dimen/margin_5"
                android:padding="@dimen/margin_5"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"
                android:textColor="@color/qora"
                android:inputType="numberDecimal"
                android:hint="@string/text_summa"
                android:textSize="@dimen/text_size30" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>