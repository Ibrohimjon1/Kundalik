<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ibrohimjon.kundalik.BoshOyna">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--<WebView-->
                <!--android:id="@+id/webview"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:background="@color/qora"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:layout_height="wrap_content">-->

            <!--</WebView>-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:gravity="center"
                android:text="Ushbu dastur Ahmadjonov Ibrohimjon Ilhomjon o'g'li tomonidan tuzilgan!"
                android:textColor="@color/qizil"
                android:textSize="@dimen/text_size25"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:text="Taklif va mulohazalar uchun:"
                android:textColor="#ff0"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="@dimen/margin_5"
                    android:src="@drawable/phone_image" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:linksClickable="true"
                    android:autoLink="phone"
                    android:text="+998 93 699 57 75\n+998 93 789 94 91"
                    android:textColor="@color/oq"
                    android:textSize="@dimen/text_size25" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="@dimen/margin_5"
                    android:src="@drawable/email" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:autoLink="email"
                    android:linksClickable="true"
                    android:text="Ahmadjonov.Ibrohimjon@mail.ru"
                    android:textColor="@color/oq"
                    android:textSize="20sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="@dimen/margin_5"
                    android:src="@drawable/telegram" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:autoLink="none"
                    android:linksClickable="true"
                    android:text="\@ahmadjonov_ibrohimjon"
                    android:textColor="@color/oq"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
